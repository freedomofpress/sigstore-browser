{
  "name": "@freedomofpress/sigstore-browser",
  "version": "0.1.6",
  "description": "A minimal browser-only Sigstore verification library.",
  "repository": {
      "type": "git",
      "url": "https://github.com/freedomofpress/sigstore-browser"
  },
  "main": "dist/index.js",
  "browser": "dist/sigstore.min.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/sigstore.min.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build && tsc",
    "test": "vitest run --config vite.config.playwright.ts",
    "test:node": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "npx eslint . --fix && npx prettier --write ."
  },
  "keywords": [
    "sigstore",
    "rekor",
    "browser",
    "typescript"
  ],
  "author": "Giulio B",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.0.14",
    "vite": "^6.3.5",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "playwright": "^1.57.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@freedomofpress/crypto-browser": "^0.1.4",
    "@freedomofpress/tuf-browser": "^0.1.5",
    "@noble/curves": "^2.0.1"
  }
